{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS", 
    "moduleResolution": "node",  
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@models/*": ["./schema/*"],
      "@auth/*": ["./api/auth/*"],
      "@user/*": ["./api/user/*"],
      "@playgrounds/*": ["./api/playgrounds/*"],
      "@config/*": ["./config/*"],
      "@utils/*": ["./utils/*"]
    }
  },
  "include": ["src/**/*"]
}
